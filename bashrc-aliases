source .config/luke-config/general-config

## General Movement
#------------------------------------------------------------
alias asd="cd"
alias d="cd $HOME/Desktop"
alias dv="cd $HOME/Dev"
alias cw="cd $HOME/Dev/Bijou"


## Pacman/Yay
#------------------------------------------------------------
alias pps="pacman -Ss"
alias sps="sudo pacman -S"
alias ys="yay -Ss"


## C/C++
#------------------------------------------------------------
alias m="make"
alias mc="make clean"
alias a="./bin/app"

## PHP/Composer
#------------------------------------------------------------
alias pp="php -S localhost:8000 -t public/"
alias cpda="composer dump-autoload"
alias cpin="composer install"

## Ruby/Rails
#------------------------------------------------------------
alias r="rails"
alias rs="r server"
alias rs="r server"
alias rc="r console"
alias rdm="r db:migrate"
alias rds="r db:seed"

## Spotify
#------------------------------------------------------------
alias sp="spotifyd --config-path ~/.config/spotifyd/spotifyd.conf --no-daemon"

